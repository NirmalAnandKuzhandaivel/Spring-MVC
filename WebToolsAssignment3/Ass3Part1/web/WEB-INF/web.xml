<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>MovieFilter</filter-name>
        <filter-class>com.webtoos.assignment3.filter.MovieFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MovieFilter</filter-name>
        <url-pattern>/addMovie.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>com.webtools.assignment3.controller.MovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchMovieController</servlet-name>
        <servlet-class>com.webtools.assignment3.controller.SearchMovieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movie.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMovieController</servlet-name>
        <url-pattern>/addMovie.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchMovieController</servlet-name>
        <url-pattern>/Search.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dbuser</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>Summer@123</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:sqlserver://127.0.0.1:1433;DatabaseName=WEBTOOLS</param-value>
    </context-param>
</web-app>
