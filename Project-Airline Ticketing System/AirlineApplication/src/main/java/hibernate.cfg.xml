<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/airlinefinal</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Summer@123</property>

		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>

		<mapping class="com.webtools.airline.model.User" />
	    <mapping class="com.webtools.airline.model.FlightDetails" />
	    
	      <mapping class="com.webtools.airline.model.Order" />
	       <mapping class="com.webtools.airline.model.Passenger" />
	       <mapping class="com.webtools.airline.model.Ticket" />
	       <mapping class="com.webtools.airline.model.MessageBean" />

	</session-factory>
</hibernate-configuration>